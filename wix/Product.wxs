<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Id="*" 
           Name="FastSearch MCP" 
           Manufacturer="FastSearch" 
           Version="1.0.0" 
           UpgradeCode="3298de23-b4e3-481e-91f7-ddcb238b95b4"
           Language="1033">
    
    <Package InstallerVersion="200" 
             Compressed="yes" 
             InstallScope="perMachine"
             Description="FastSearch MCP - Fast file search with MCP integration"
             Comments="FastSearch MCP is a high-performance file search tool with MCP integration" />
             
    <MajorUpgrade DowngradeErrorMessage="A newer version of FastSearch MCP is already installed." />
    <Media Id="1" Cabinet="media1.cab" EmbedCab="yes" />
    
    <!-- Set installation directory -->
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFilesFolder">
        <Directory Id="INSTALLFOLDER" Name="FastSearch MCP" />
      </Directory>
      <Directory Id="ProgramMenuFolder">
        <Directory Id="ApplicationProgramsFolder" Name="FastSearch MCP"/>
      </Directory>
    </Directory>

    <!-- Application files -->
    <Feature Id="ProductFeature" Title="FastSearch MCP" Level="1">
      <ComponentRef Id="PythonPackage" />
      <ComponentRef Id="PythonModule" />
      <ComponentRef Id="LauncherScript" />
      <ComponentRef Id="ServiceInstall" />
      <ComponentRef Id="ReadmeFile" />
      <ComponentRef Id="LicenseFile" />
    </Feature>

    <!-- UI Configuration -->
    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLFOLDER" />
    <Property Id="WIXUI_EXITDIALOGOPTIONALCHECKBOXTEXT" Value="Launch FastSearch Service" />
    <Property Id="WixShellExecTarget" Value="[#FastSearchMCPBridgeExe]" />
    
    <!-- Custom Actions for Python Package Installation -->
    <CustomAction Id="InstallPythonPackage" 
                 FileKey="LauncherBat" 
                 ExeCommand='-m pip install --upgrade .' 
                 Execute="deferred" 
                 Return="check" 
                 Impersonate="no" />
    
    <CustomAction Id="UninstallPythonPackage" 
                 FileKey="LauncherBat" 
                 ExeCommand='-m pip uninstall -y fastsearch-mcp' 
                 Execute="deferred" 
                 Return="check" 
                 Impersonate="no" />
    
    <InstallExecuteSequence>
      <Custom Action="InstallPythonPackage" After="InstallFiles">NOT Installed</Custom>
      <Custom Action="UninstallPythonPackage" Before="RemoveFiles">REMOVE~="ALL"</Custom>
    </InstallExecuteSequence>

    <!-- UI Configuration -->
    <UIRef Id="WixUI_InstallDir" />
    <WixVariable Id="WixUILicenseRtf" Value="wix\\license.rtf" />
    <WixVariable Id="WixUIBannerBmp" Value="wix\\banner.bmp" />
    <WixVariable Id="WixUIDialogBmp" Value="wix\\dialogbg.bmp" />
    
    <!-- Custom Actions -->
    <CustomAction Id="LaunchApplication" 
                  FileKey="FastSearchMCPBridgeExe" 
                  ExeCommand="" 
                  Return="asyncNoWait" />
                  
    <UI>
      <Publish Dialog="ExitDialog" 
               Control="Finish" 
               Event="DoAction" 
               Value="LaunchApplication">WIXUI_EXITDIALOGOPTIONALCHECKBOX = 1 AND NOT Installed</Publish>
    </UI>

    <!-- Files -->
    <DirectoryRef Id="INSTALLFOLDER">
      <!-- Python Package -->
      <Component Id="PythonPackage" Guid="*">
        <File Id="SetupPy" Source="..\\setup.py" KeyPath="yes" />
        <File Id="PyProjectToml" Source="..\\pyproject.toml" />
        <File Id="ReadmeMd" Source="..\\README.md" />
      </Component>
      
      <!-- Python Module -->
      <Directory Id="PythonModuleDir" Name="fastsearch_mcp">
        <Component Id="PythonModule" Guid="*">
          <File Id="McpServerPy" Source="..\\fastsearch_mcp\\mcp_server.py" KeyPath="yes" />
          <File Id="MainInitPy" Source="..\\fastsearch_mcp\\__init__.py" />
          <File Id="MainPy" Source="..\\fastsearch_mcp\\__main__.py" />
          <File Id="DecoratorsPy" Source="..\\fastsearch_mcp\\decorators.py" />
        </Component>
      </Directory>
      
      <!-- Launcher Script -->
      <Component Id="LauncherScript" Guid="*">
        <File Id="LauncherBat" Source="..\\launch_fastsearch_mcp.py" KeyPath="yes">
          <Shortcut Id="startmenuBridge" 
                   Directory="ApplicationProgramsFolder" 
                   Name="FastSearch MCP Bridge" 
                   WorkingDirectory="INSTALLFOLDER"
                   Arguments="--service-pipe \\.\pipe\fastsearch-service"
                   Icon="mainicon.ico"
                   Advertise="yes" />
        </File>
      </Component>
      
      <!-- Documentation -->
      <Component Id="ReadmeFile" Guid="*">
        <File Id="Readme" 
              Source="..\\README.md" 
              KeyPath="yes" />
        <Shortcut Id="startmenuReadme" 
                 Directory="ApplicationProgramsFolder" 
                 Name="Readme" 
                 WorkingDirectory="INSTALLFOLDER"
                 Advertise="yes" />
      </Component>
      
      <!-- License -->
      <Component Id="LicenseFile" Guid="*">
        <File Id="License" 
              Source="..\\LICENSE" 
              KeyPath="yes" />
      </Component>
      
      <!-- Windows Service -->
      <Component Id="ServiceInstall" Guid="*">
        <File Id="FastSearchService" 
              Source="..\\service\\target\\release\\fastsearch.exe" 
              KeyPath="yes" />
        <ServiceInstall Id="FastSearchService" 
                       Name="FastSearchService" 
                       DisplayName="FastSearch MCP Service"
                       Description="Provides lightning-fast file search using NTFS MFT"
                       Start="auto" 
                       Type="ownProcess"
                       Vital="yes"
                       ErrorControl="normal"
                       Account="LocalSystem"
                       Arguments="--run-as-service"
                       Interactive="no">
          <ServiceDependency Id="tcpip" />
        </ServiceInstall>
        <ServiceControl Id="StartService" 
                       Name="FastSearchService" 
                       Start="install" 
                       Stop="both" 
                       Remove="uninstall" 
                       Wait="yes" />
      </Component>
    </DirectoryRef>
  </Product>
</Wix>
