{
  "name": "fastsearch-mcp",
  "version": "0.1.0",
  "description": "Lightning-fast file search using NTFS Master File Table - MCP Server for Claude Desktop",
  "main": "dist/index.js",
  "bin": {
    "fastsearch-mcp": "bin/fastsearch-mcp.js"
  },
  "scripts": {
    "build": "npm run build:rust && npm run build:js",
    "build:rust": "cargo build --release",
    "build:js": "tsc",
    "dev": "npm run build && node dist/index.js --mcp-server",
    "test": "npm run test:rust && npm run test:js",
    "test:rust": "cargo test",
    "test:js": "jest",
    "benchmark": "node scripts/benchmark.js",
    "prepare": "npm run build",
    "postinstall": "node scripts/install.js"
  },
  "keywords": [
    "mcp",
    "mcp-server", 
    "file-search",
    "ntfs",
    "claude",
    "anthropic",
    "filesystem",
    "search",
    "performance"
  ],
  "author": "Sandra & Claudius",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sandra-claudius/fastsearch-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/sandra-claudius/fastsearch-mcp/issues"
  },
  "homepage": "https://github.com/sandra-claudius/fastsearch-mcp#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "os": [
    "win32"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0"
  },
  "files": [
    "dist/",
    "bin/",
    "target/release/fastsearch.exe",
    "scripts/",
    "README.md",
    "LICENSE"
  ]
}